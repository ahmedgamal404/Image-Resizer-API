{
  "name": "image_api",
  "version": "1.0.0",
  "description": "it's an image api for generating resized imaged to be used as a placeholder in frontend design",
  "main": "app.js",
  "scripts": {
    "build": "npx tsc",
    "jasmine": "jasmine",
    "test": "npm run build && npm run jasmine",
    "prettier": "prettier src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts",
    "lint": "npx eslint --fix src/**/*.ts",
    "start": "npm run prettier:fix && npm run lint",
    "api": "npm run test && npm run start && node build/app"
  },
  "keywords": [
    "image",
    "api",
    "resized",
    "image",
    "server"
  ],
  "author": "Ahmed Gamal",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "sharp": "^0.29.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^3.10.3",
    "@types/node": "^17.0.10",
    "@types/sharp": "^0.29.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "jasmine": "^4.0.2",
    "jasmine-spec-reporter": "^7.0.0",
    "prettier": "2.5.1",
    "supertest": "^6.2.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
